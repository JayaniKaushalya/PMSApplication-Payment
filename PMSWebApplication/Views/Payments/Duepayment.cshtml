@model IEnumerable<PMSWebApplication.Models.Duepayment>
@{
    ViewBag.Title = "Duepayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Duepayment</h2>


@using (Html.BeginForm(FormMethod.Get))


{


    <div class="container">
        <div class="row" style="margin-bottom:15px">
            @*@Html.ActionLink("Add Payment", "Create")*@
        </div>

        <div class="row" style="margin-bottom:15px">
            <div class="col-xs-6 col-lg-3" style="padding-left:0">
                @Html.DropDownList("ProjectId", null, "All Projects", htmlAttributes: new { @class = "form-control", @selected = "-1", @id = "pId" })


            </div>
            <div class="">
                <input class="btn btn-success" type="button" value="Search" onclick="getObjId()" />

            </div>

        </div>


    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskStages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskName)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.PaidAmount)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskStages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.PaidAmount)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }
</table>
<script>
    function getObjId() {

        var val = document.getElementById("pId").value;
        url = '@Url.Action("Duepayment", "Payments" )' + '/';
        var ul = url.slice(0,20) + '/' + val ;

        window.location.href = ul;
    }
</script>
